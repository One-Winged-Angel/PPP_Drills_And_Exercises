#include "../std_lib_facilities.h" //includes custom header

using namespace std;

int main()
{
	cout << "Enter the first integer value:\n";
	int val1;
	cin >> val1;
	cout << "Enter the second integer value:\n";
	int val2;
	cin >> val2;
	 

	//size
	if (val2 == val1)
	{
		cout << "the numbers are the same size\n";
	}
	else if (val1 > val2)
	{
		cout << "val1 is bigger than val2\n";
	}
	else
	{
		cout << "val2 is bigger than val1\n";
	}
	
	//sum 
	cout << "The sum of the two numbers is \n" << val1 + val2 << endl;

	//difference
	cout << "The difference between the two numbers is \n" << abs(val1 - val2) << endl;

	//product
	cout << "The product of the two number is \n" << val1 * val2 << endl;
	//ratio
	double ratio_one;
	double ratio_two;
	if (val1 > val2)
	{
		ratio_one = val1 / val2;
		cout << "The first number is " << ratio_one << " times bigger than the second number";
	}
	else if (val2 > val1)
	{
		ratio_two = val2 / val1;
		cout << "The second number is " << ratio_two << " times bigger than the first number";
	}
	return 0;
	
}
